<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% if(typeof(animal)==='undefined') { %>
    <h1>Adding new animal here. </h1>
    <% if(typeof(errors) != 'undefined' ) { %>
       <% for (var x in errors) { %>
               <h3><%= errors[x].message %></h3>
       <% } %>
     <% } %>
    <form action="/mongooses" method="post">
        <input type="text" name="name">
        <input type="text" name="description">
        <button type="submit" >Submit</button>
    </form>
    <br>
    <% } else { %>



    <h1>Editing a animal here. </h1>
    <form action="/mongoose/<%=animal[0].id%>" method="post">
        <input type="text" name="name" value="<%=animal[0].name%>">
        <input type="text" name="description" value='<%=animal[0].description%>'>
        <button type="submit" >Submit</button>
    </form>
    <% if(typeof(errors) != 'undefined' ) { %>
       <% for (var x in errors) { %>
               <h3><%= errors[x].message %></h3>
       <% } %>
     <% } %>

     <% } %>
  </body>
</html>
